{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"extends": [
		"./node_modules/eslint-config-heck/biomeLinting.json"
	],
	"linter": {
		"rules": {
			"performance": {
				"noBarrelFile": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 130
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}