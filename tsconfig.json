{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "node16",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "declaration": true,
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "src"
  ]
}